<p id="notice"><%= notice %></p>

<h2 class="ui center aligned icon header">
  <i class="users icon"></i>
  Dependents
</h2>
<%= link_to 'New Dependent', new_dependent_path %>
<table class="ui sortable celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cell phone</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dependents.each do |dependent| %>
      <tr>
        <td><%= dependent.name %></td>
        <td><%= dependent.cell_phone %></td>
        <td><%= dependent.employer %></td>
        <td class="positive"><%= link_to semantic_icon('file') + 'Summary', dependent %></td>
        <td class="warning"><%= link_to semantic_icon('edit') + 'Edit', edit_dependent_path(dependent) %></td>
        <td class="negative"><%= link_to semantic_icon('trash') + 'Delete', dependent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


